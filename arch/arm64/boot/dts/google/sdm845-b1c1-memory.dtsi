/* B1C1 memory includes go here */

&reserved_memory {

	/*
	 Reverved memory carveout is defined in TZ project:
	 ssg/securemsm/trustzone/qsee/mink/oem/config/sdm845/oem_config.xml
	 */

	/delete-node/ modem_region@0x8e000000;
	/delete-node/ video_region@0x95800000;
	/delete-node/ cdsp_region@0x95d00000;
	/delete-node/ mba_region@0x96500000;
	/delete-node/ slpi_region@0x96700000;
	/delete-node/ pil_spss_region@0x97b00000;

	/*
	 the following carveout items are still defined in sdm845.dtsi:
	 region          address    size
	 ==========      ========== =========
	 hyp_region:     0x85700000  0x600000
	 xbl_region:     0x85e00000  0x100000
	 removed_region: 0x85fc0000 0x2f40000
	 pil_camera_mem: 0x8bf00000  0x500000
	 pil_adsp_mem:   0x8c500000 0x1a00000
	 wlan_fw_region: 0x8df00000  0x100000
	 */

	pil_modem_mem: modem_region@0x8e000000 {
		compatible = "removed-dma-pool";
		no-map;
		reg = <0 0x8e000000 0 0xa600000>;
	};

	pil_video_mem: pil_video_region@0x98600000 {
		compatible = "removed-dma-pool";
		no-map;
		reg = <0 0x98600000 0 0x500000>;
	};

	pil_cdsp_mem: cdsp_regions@0x98B00000 {
		compatible = "removed-dma-pool";
		no-map;
		reg = <0 0x98B00000 0 0x800000>;
	};

	pil_mba_mem: pil_mba_region@0x99300000 {
		compatible = "removed-dma-pool";
		no-map;
		reg = <0 0x99300000 0 0x200000>;
	};

	pil_slpi_mem: pil_slpi_region@0x99500000 {
		compatible = "removed-dma-pool";
		no-map;
		reg = <0 0x99500000 0 0x1400000>;
	};

	pil_spss_mem: spss_region@0x9A900000 {
		compatible = "removed-dma-pool";
		no-map;
		reg = <0 0x9A900000 0 0x100000>;
	};

	easel_mem: easel_mem@9f800000 {
		compatible = "removed-dma-pool";
		reg = <0 0x9f800000 0 0x4000000>;
		label = "easel_mem";
	};
};
