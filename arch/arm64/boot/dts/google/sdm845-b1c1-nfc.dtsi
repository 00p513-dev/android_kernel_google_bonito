&tlmm {
	nfc {
		/* remove the ../qcom/sdm845-pinctrl.dtsi legacy */
		/delete-node/ nfc_int_active;
		/delete-node/ nfc_int_suspend;
		/delete-node/ nfc_enable_active;
		/delete-node/ nfc_enable_suspend;

		/* define the real stuff */
		nfc_int_default: nfc_int_default {
			/* default state */
			mux {
				/* GPIO 63 NFC Read Interrupt */
				pins = "gpio63";
				function = "gpio";
			};

			config {
				pins = "gpio63";
				drive-strength = <2>; /* 2 MA */
				bias-pull-down;
			};
		};

		nfc_enable_default: nfc_enable_default {
			/* default state */
			mux {
				/* 12: NFC ENABLE, 24:ESE Enable, 122:ESE WAKEUP INT */
				pins = "gpio12", "gpio24", "gpio122";
				function = "gpio";
			};

			config {
				pins = "gpio12", "gpio24", "gpio122";
				drive-strength = <2>; /* 2 MA */
				bias-pull-down;
			};
		};
	};
};

&qupv3_se3_i2c {
	status = "ok";
	st21nfc: st21nfc@08 {
		compatible = "st,st21nfc";
		reg = <0x08>;
		interrupt-parent = <&tlmm>;
		interrupts = <63 0>;
		st,reset_gpio = <&tlmm 12 0x00>;
		st,irq_gpio = <&tlmm 63 0x00>;
		status = "ok";
		pinctrl-names = "default";
		pinctrl-0 = <&nfc_int_default &nfc_enable_default>;
	};
};
