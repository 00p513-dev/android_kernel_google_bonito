
/* Supported hardware: B1 EVT1 => B1 EVT2, C1 P1 => C1 EVT1 */

&thermal_zones {
	fps-therm-adc {
		status = "disabled";
	};

	usbc-therm-adc {
		polling-delay-passive = <0>;
		polling-delay = <0>;
		thermal-sensors = <&pm8998_adc_tm 0x4f>;
		thermal-governor = "user_space";

		trips {
			active-config0 {
				temperature = <125000>;
				hysteresis = <10000>;
				type = "passive";
			};
		};
	};
};

&pm8998_vadc {
	chan@4f {
		label = "usbc_therm";
	};
};

&pm8998_adc_tm {
	chan@4f {
		label = "usbc_therm";
		qcom,btm-channel-number = <0x80>;
	};
};
